<%- include('../includes/top') %>

<%- include('../includes/navbar') %>

<div class="profile-content">

    <div class="user-content">

    </div>
    
    <div class="user-information">
        
        <form action="/user<%= url %>" method="POST">
        
            <h1 class="profile-name"> Username:
                <br>
                <input type="text" name="username" value="<%= username %>" class="<%= inputErrors.find(e => e.param === 'invalidUsername=true') ? 'invalid-input' : '' %>"> 
            </h1>

            <div class="profile-pic-section">
                <img class="profile-pic" src="https://lakewangaryschool.sa.edu.au/wp-content/uploads/2017/11/placeholder-profile-sq.jpg" alt="profile-pic" >
            </div>
            
            <p class="user-data-section"><strong>Books read:</strong> &nbsp;<%= booksRead %> </p>
            <p class="user-data-section"><strong>Email:</strong> &nbsp; <input type="email" name="email" value="<%= email %>" class="<%= inputErrors.find(e => e.param === 'invalidEmail=true') ? 'invalid-input' : '' %>"> </p>
            <p class="user-data-section"><strong>Member since:</strong> &nbsp;<%= memberSince %></p>




            <% if(inputErrors.length > 0) { %>      
                <div class="error-message">
    
                    <% for (error of inputErrors) { %>
                    
                        <% if(error.param === "invalidUsername=true") { %>
                            <p>Invalid username value, please enter a valid username value.</p>
                        <% } %>
    
                        <% if(error.param === "invalidEmail=true") { %>
                            <p>Invalid Email value, please enter a valid Email value.</p>
                        <% } %>
                    
                    <% } %>
    
                </div>           
            <% } %>





            
            <button type="submit" class="edit-profile-btn">Save Profile</button>
        
        </form>
        
    </div>
    
    <div class="user-content">

    </div>

</div>

<%- include('../includes/bottom') %>
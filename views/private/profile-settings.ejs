<%- include('../includes/top') %>
<div class="profile-edit__section container">
    <form class="mt-5" action="<%= url %>" method="POST">
        
        <div class="row">
            <div class="col-lg-8 px-5 pt-1 pb-4 rounded mx-auto border">
                
                <h1 class="text-center text-primary pb-2 mb-4 border-bottom">Change password</h1>

                <div class="input-group mt-4">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-key"></i></div>
                    </div>
                    <input type="password" id="old-password" class="form-control <%= inputErrors.find(e => e.param === 'invalidOldPassword=true') ? 'is-invalid' : '' %>" name="oldPassword" placeholder="Current password (required)" required>
                </div>
                <% for(error of inputErrors) { %>
                    <% if(error.param === 'invalidOldPassword=true') { %>
                        <div class="invalid-feedback d-block">
                            Wrong password, please try again.
                        </div>
                    <% } %>    
                <% } %>


                <small class="text-muted d-block mt-4">Password must be 5 or more characters long <span class="text-danger">*</span> </small>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-key"></i></div>
                    </div>
                    <input type="password" id="new-password-1" class="form-control <%= inputErrors.find(e => e.param === 'invalidNewPassword1=true' || e.param === 'invalidNewPassword2=true') ? 'is-invalid' : '' %>" name="newPassword1" placeholder="New password (required)" required>
                </div>
                <% for(error of inputErrors) { %>
                    <% if(error.param === 'invalidNewPassword1=true') { %>
                        <div class="invalid-feedback d-block">
                            Invalid new password, please try again.
                        </div>
                    <% } %>    
                <% } %>

                <div class="input-group mt-4">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-key"></i></div>
                    </div>
                    <input type="password" id="new-password-2" class="form-control <%= inputErrors.find(e => e.param === 'invalidNewPassword2=true') ? 'is-invalid' : '' %>" name="newPassword2" placeholder="Repeat new password (required)" required>
                </div>
                <% for(error of inputErrors) { %>
                    <% if(error.param === 'invalidNewPassword2=true') { %>
                        <div class="invalid-feedback d-block">
                            Passwords do not match, please try again.
                        </div>
                    <% } %>    
                <% } %>


                <div class="w-100 mt-4 d-flex justify-content-end">
                    <a href="<%= authenticatedUserUrl %>" class="btn btn-danger">Cancel</a>
                    <button class="btn btn-primary ml-4" type="submit">Change password</button>
                </div>

            </div>
        </div>
    
    </form>

</div>
<%- include('../includes/bottom') %>
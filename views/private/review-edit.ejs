<%- include('../includes/top') %>
<div class="profile-edit__section container">
    <form class="mt-5" action="<%= formAction %>" method="POST">
        
        <div class="row">
            <div class="col-lg-8 px-5 pt-1 pb-4 rounded mx-auto border">
                
                <h1 class="text-center text-primary pb-2 mb-4 border-bottom">Edit Review</h1>

                <label for="newReviewTitle" class="text-muted d-block mt-4">Heading for your review (required)</label>
                <div class="input-group">
                    <input class="form-control" type="text" name="newReviewTitle" id="newReviewTitle"  value="<%= reviewTitle %>" placeholder="Heading for your review (required)" required>
                </div>

                <label for="newReview" class="text-muted d-block mt-4">Your review (required)</label>
                <div class="input-group">
                    <textarea class="form-control" name="newReview" id="newReview" placeholder="Your review (required)" required rows="5"><%= review %></textarea>
                </div>

                <label for="newReviewRating" class="text-muted d-block mt-4">Your rating (required)</label>
                <div class="input-group">
                    <select class="form-control" id="newReviewRating" name="newReviewRating">

                        <% if(reviewRating === 1) { %>
                            <option selected>1</option>
                        <% } else { %>
                            <option>1</option>
                        <% } %>

                        <% if(reviewRating === 2) { %>
                            <option selected>2</option>
                        <% } else { %>
                            <option>2</option>
                        <% } %>

                        <% if(reviewRating === 3) { %>
                            <option selected>3</option>
                        <% } else { %>
                            <option>3</option>
                        <% } %>

                        <% if(reviewRating === 4) { %>
                            <option selected>4</option>
                        <% } else { %>
                            <option>4</option>
                        <% } %>

                        <% if(reviewRating === 5) { %>
                            <option selected>5</option>
                        <% } else { %>
                            <option>5</option>
                        <% } %>
                    </select>
                </div>


                <div class="w-100 mt-4 d-flex justify-content-end">
                    <a href="<%= authenticatedUserUrl %>" class="btn btn-danger">Cancel</a>
                    <button class="btn btn-primary ml-4" type="submit">Edit review</button>
                </div>

            </div>
        </div>
    
    </form>

</div>
<%- include('../includes/bottom') %>